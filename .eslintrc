{
    "parser": "babel-eslint",
    "plugins": ["react"],
    "env": {
        "node": true
    },
    "ecmaFeatures": {
        "jsx": true
    },
    "rules": {
        "no-console": ["warn", {allow: ["warn","error"]}],
        "no-extra-semi": "error",
        "no-unreachable": "error",
        "array-bracket-spacing": ["error", "never"],
        "object-curly-spacing": ["error", "always"],
        "semi": ["error", "always"],
        "indent": ["error"],
        "space-before-function-paren": "error",
        "no-spaced-func": "error",
        "space-unary-ops": [
        "error", {
            "words": true,
            "nonwords": false
        }
        ],
        "comma-spacing": ["error", {
            "before": false,
            "after": true
        }],
        "keyword-spacing": ["error", {
            "before": true,
            "after": true
        }],
        "space-infix-ops": "error",
        "semi-spacing": ["error", {
            "before": false,
            "after": true
        }],
        "key-spacing": ["error", {
            "beforeColon": false,
            "afterColon": true
        }]
    }
}
